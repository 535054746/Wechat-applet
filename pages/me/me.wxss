/* pages/me/me.wxss */
page{
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: #333333;
  background-image: linear-gradient(#FFE7E3, #F2F2F2);
  height: 100%;
}
.badge-position{
  position: absolute;
  top: 19px;
  left: 42%;
  margin-left: 10px;
  margin-top: -10px;
}
.user-area{
  padding: 30px 20px 10px;
  position: relative;
}
.circle-img{
  width: 60px;
  height: 60px;
  border-radius: 100%;
}

.user-text{
  position: absolute;
  top: 20px;
  left: 95px;
}
.nick-name{
  font-weight: bold;
  font-size: 18px;
  line-height: 80px;
  display: inline-block;
}
.user-type{
  font-size: 12px;
  padding: 0 8px;
  margin-left: 10px;
  border-radius: 8px;
  color: #b1b1b1;
  border: 1px solid #b1b1b1;
  display: inline-block;
}

.block-bg{
  margin: 10px 15px;
  background: white;
  border-radius: 10px;
  padding: 10px 0;
}

.title-text{
  font-size: 16px;
  padding-left: 10px;
  padding-bottom: 10px;
  font-weight: 100;
  border-bottom: 1px solid #F2F2F2;
}

.sub-title-text{
  float: right;
  color: #b1b1b1;
  font-size: 12px;
  margin-right: 10px;
}

.icon-img{
  width: 30px;
  height: 30px;
}

.icon-text{
  font-size: 14px;
}

.clear{
  clear: both;
}

.icon-area{
  position: relative;
  width: 25%;
  text-align: center;
}
.meList{
  padding: 0 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.meChild{
  align-self: center;
  position: relative;
  width: 70px;
  text-align: center;
  padding-top: 20px;
}