    splist: [],
    carlist: [],
    wheight: 0,
    itemData: '',
    crr: '',
    categoryId:'',
    carshopNum: '',
    tarbarLight: ''
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var than = this
    // than.shopData();
    than.shopfeulei()
    wx.getSystemInfo({
      success: function(res) {
        than.setData({
          wheight: res.windowHeight
        })
      },
    })
    wx.setStorageSync('splist', than.data.splist)
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  shopfeulei() {
    var than = this
    ajax.ajaxPOST({
      url: 'member/mallItemProgram/findMallItemProgramCategory',
      data: {
        id: '19'
      },
      success(res) {
        if(res.code == 1) {
          than.setData({
            itemData: res.data
          })
          console.log(res)
          than.leftNav({ index: 0, id: res.data[0].categoryid })
        } else {
          wx.showToast({
            title: data.message,
            icon: none
          })
        }
      }
    })
  },

  leftNav: function(e) {
    var than = this
    var leftId;
    var id;
    if (e.currentTarget == null || e.currentTarget == undefined) {
      leftId = e.index;
      id = e.id;
    }else{
      leftId = e.currentTarget.dataset.index;
      id = e.currentTarget.dataset.id;
    }
    ajax.ajaxPOST({
      url: 'member/mallItemProgram/findMallItemProgramDetails',
      data: {
          id: '19',
          categoryId: id
        },
      success(res) {
        res.data.forEach(item => {
          item.count = 0;
          item.isSelect = false
        })
        than.setData({
          list: res.data
        })
      }
    })
    than.setData({
      crr: leftId
    })
  },

  add: function(e) {
    var than = this
    const index = e.currentTarget.dataset.index;
    let list = this.data.list;
    var splist = than.data.splist
    var crrid = splist.find(item => item.id === list[index].id)
    let count = list[index].count;
    if(crrid) {
      count = count + 1
    } else {
      count = count + 1
      splist.push(list[index])
    }
    list[index].count = count;
    splist[index].count = count
    than.setData({
      list: list,
      splist: splist,
      carshopNum: splist.length

    });
    wx.setStorageSync('splist', splist)
    console.log(splist)
    wx.setTabBarBadge({
      index: 1,
      text: `${splist.length}`,
      success(res) {
        console.log(res)
      }
    })


  },


  sub: function (e) {
    const index = e.currentTarget.dataset.index;
    let list = this.data.list;
    let count = list[index].count;
    count = count - 1;
    list[index].count = count;
    var splist = wx.getStorageSync('splist')
    splist[index].count = count
    this.setData({
      list: list,
      splist:splist
    });
    wx.setStorageSync('splist', splist)
  },

  bindIptCartNum: function (e) {
    const index = e.currentTarget.dataset.index;
    var num = e.detail.value;
    let list = this.data.list;
    list[index].count = num;
    this.setData({
      list: list
    });
  },


  onReady: function () {
  },

  /**
   * 生命周期函数--监听页面显示
   */
    
  onShow: function () {
    var than = this
    var splist = wx.getStorageSync('splist')
    console.log(splist.length)
    var list = wx.getStorageSync('list')
    var shopList = than.data.list;
    for(let i = 0;i<shopList.length;i++) {
      for(let j=0;j<list.length;j++) {
       if(shopList[i].id === list[j].id) {
         shopList[i].count = list[j].count;
         break
       } else {
         shopList[i].count = 0
       }
      }
    }
    wx.setStorageSync('splist', list)
    than.setData({
      list: shopList,
      splist: splist,
      tarbarLight: splist.length
    })
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {
    var than = this
    var carData = than.data.list
    var splist = than.data.splist
    var splist = than.data.splist.filter(item=> {
      return item.count > 0
    })
    wx.setStorageSync('splist',splist || [] )
    than.data.splist = []
  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

