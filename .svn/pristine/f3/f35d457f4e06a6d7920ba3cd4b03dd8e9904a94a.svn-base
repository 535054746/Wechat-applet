// pages/search/search.js
var host = require('../../utils/http.js')
const app = getApp();
var ajax = require('../../utils/requestUtil.js')
var myUtil = require('../../utils/util.js')

Page({

  /**
   * 页面的初始数据
   */
  data: {
    showKeywords: false,
    showResult: false,
    value: '',
    shopList: '',
    cartList: [],
    shopStatus: false,
    carlength: '',
    history: [],
    clear: true,
    stashop: false
  },

  inputTxt() {
    this.setData({
      value: '',
      shopStatus: false
    })
  },
  gwc() {
    wx.switchTab({
      url: '/pages/car/car',
    })
  },
  clearhistory() {
    var than = this
    wx.showModal({
      title: '提示',
      content: '是否确认删除？',
      success(res) {
        if(res.confirm){
          wx.removeStorageSync('history')
          than.setData({
            clear: false
          })
        }
      }
    })
  },
  
  keywordHandle(e) {
    const text = e.target.dataset.text;
    this.setData({
      value: text,
      showKeywords: false,
      showResult: true
    })
    this.searBtn()
    this.historyHandle(text);
  },
  searchInput(e) {
    var than = this
    if (!e.detail.value) {
      than.setData({
        showKeywords: false,
        shopStatus: false
      })
    } else {
      than.setData({
        showKeywords: true,
        value: e.detail.value,
      })
    }
  },

  searBtn(e) {
    var than = this
    var valTxt = than.data.value
  wx.showLoading({
    title: '请稍后...',
  })
    if(!valTxt) {
      return false
    } else {
      ajax.ajaxPOST({
        url:'member/mallItemProgram/findMallItemProgramDetails',
        data: {
          id: '19',
          name: valTxt
        },
        success(res) {
          wx.hideLoading()
          res.data.forEach(item => {
            item.qty = 0;
            item.isSelect = false
          })
          if(res.data.length == 0) {
            than.setData({
              stashop: true
            })
          } else {
            than.setData({
              shopList: res.data,
              shopStatus:true,
              stashop: false
            })
          }
        }
      })
    }
   than.historyHandle(valTxt)
  },

  historyHandle(value) {
    let history = this.data.history;
    const idx = history.indexOf(value);
    if (idx === -1) {
      if (history.length > 7) {
        history.pop();
      }
    } else {
      history.splice(idx, 1);
    }
    history.unshift(value);
    wx.setStorageSync('history', JSON.stringify(history));
    this.setData({
      history
    });
  },



  add(e) {
    var than = this
    var index = e.currentTarget.dataset.index
    var shopList =  than.data.shopList[index]
    var cartList = wx.getStorageSync('cartList')
    var qty = shopList.qty;
    if (myUtil.isEmpty(cartList)) {
      cartList = [];
    }
    var crrid = cartList.find(item =>item.id == shopList.id)
    if(crrid) {
      qty = qty + 1
      wx.showToast({
        title: '该商品已经添加到购物车',
        icon: 'none'
      })
    } else {
      wx.showToast({
        title: '添加成功',
      })
      qty = qty + 1
      cartList.push(shopList)
    }
    shopList.qty = qty
    than.setData({
      cartList: cartList,
      carlength: cartList.length
    })
    wx.setStorageSync('cartList',cartList)
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    const history = wx.getStorageSync('history');
    if (history) {
      this.setData({
        history: JSON.parse(history)
      })
    }
    this.data.cartList = wx.getStorageSync('carList')
    if (myUtil.isEmpty(this.data.cartList)) {
      this.data.cartList = [];
    }
    wx.setStorageSync('carList', this.data.cartList)
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    var than = this
    var cartList = wx.getStorageSync('cartList')
    var list =wx.getStorageSync('list')
    than.setData({
      cartList: list,
      carlength:cartList.length
    })
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})