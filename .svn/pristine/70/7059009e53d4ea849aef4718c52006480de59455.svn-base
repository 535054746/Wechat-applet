/**app.wxss**/
html{
  margin: 0;
  padding: 0
}
.contatin{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100%;
  box-sizing: border-box
}
.shopRight {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.typeshop{
  height: 80px;
  border-bottom: 1px solid #ddd;
  position: relative
}
.img{
  margin: 6px;
  width: 55px;
  height: 55px;
  border-radius: 100%;
}
.itemName{
  position: absolute;
  top: 10px;
  font-size: 16px;
}
.specif{ 
  position: absolute;
  top: 32px;
  font-size: 14px;
  color: gray
}
.price{
  position: absolute;
  top: 10px;
  right: 15px;
  white-space:nowrap;
  font-size: 15px
}
.add{
  width: 23px;
  height: 23px;
}
.sub{
  position: absolute;
  top: 1px;
  width: 21px;
  height: 21px;
  z-index: 9;
}
.carnum{
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 10px;
  bottom: 5px
}
.weui-input{
  width: 70px;
  text-align: center;
  font-size: 14px;
  /* position: absolute; */
  padding-left: 10px
}
.unit{
  position: absolute;
  top: 1px;
  font-size: 14px;
  right: 25px;
  color: gray
}

.circle-img{
  width: 60px;
  height: 60px;
  border-radius: 100%;
  border: 1px #ddd solid;
}