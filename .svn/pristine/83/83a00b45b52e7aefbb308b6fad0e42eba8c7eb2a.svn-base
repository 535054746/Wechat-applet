/**app.wxss**/
page{
  height: 100%;
  background: #F2F2F2;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
html{
  margin: 0;
  padding: 0
}
.contatin{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100%;
  box-sizing: border-box
}
.shopRight {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.typeshop{
  height: 80px;
  border-bottom: 1px solid #ddd;
  position: relative
}
.img{
  margin: 13px;
  width: 55px;
  height: 55px;
  border-radius: 100%;
}
.itemName{
  position: absolute;
  top: 18px;
  font-size: 16px;
}
.specif{ 
  position: absolute;
  top: 41px;
  font-size: 14px;
  color: gray
}
.price{
  color: #ff4a94;
  position: absolute;
  top: 18px;
  right: 15px;
  white-space:nowrap;
  font-size: 15px
}
.add{
  width: 20px;
  height: 20px;
}
.sub{
  position: absolute;
  top: 1px;
  width: 18px;
  height: 18px;
  z-index: 9;
}
.carnum{
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 10px;
  bottom: 2px
}
.weui-input{
  width: 70px;
  text-align: center;
  font-size: 14px;
  /* position: absolute; */
  padding-left: 10px
}
.unit{
  position: absolute;
  top: 1px;
  font-size: 14px;
  right: 25px;
  color: gray
}