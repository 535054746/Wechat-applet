<view>
  <view class="Consignee">
    <text>收货人</text>
    <input  placeholder= "请填写收货人的姓名" maxlength="10"/>
  </view>

  <view class="phone">
    <text>手机号</text>
    <input placeholder="请填写收货人的电话号码"></input>
  </view>

  <view class="address">
    <text>收货地址</text>
    <view class="section">
      <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
      <view class="picker">
         {{region[0]}}，{{region[1]}}，{{region[2]}}
      </view>
      </picker>
      </view>
  </view>


  <view class="House">
    <text>门牌号</text>
    <input placeholder="请填写收货人的街道、门牌号的信息"></input>
  </view>

  <view class="radio">
    <radio class="radio">
      <text>设为默认地址</text>
    </radio>
  </view>

  <view class="address_footerbtn">
    <view>保存</view>
  </view>
</view>
