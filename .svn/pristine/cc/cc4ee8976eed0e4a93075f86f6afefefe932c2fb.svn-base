// pages/me/me.js
const app = getApp();
Page({

  /**
   * 页面的初始数据
   */
  data: {
    userInfo: {},
    badgeCount: {
      DFK: 0,
      DFH: 0,
      YFH: 0
    }
  },

  addressList: function(){
    wx.navigateTo({
      url: '/pages/addressList/addressList',
    })
  },

  contactHelp: function(){
    wx.makePhoneCall({
      phoneNumber: '15915982525',
    });
  },

  aboutUs: function(){
    wx.navigateTo({
      url: '/pages/aboutUs/aboutUs',
    })
  },
  
  viewImg: function(e){
    var vm = this;
    wx.previewImage({
      urls: [vm.data.userInfo.avatarUrl],
    })
  },

  goOrderList: function(event){
    var status = event.currentTarget.dataset.status;;
    wx.navigateTo({
      url: '?status='+status,
    })
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var vm = this;
    wx.getUserInfo({
      success: res => {
        vm.setData({
          userInfo: res.userInfo
        })
      }
    })
    
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {
    var vm = this;
    setTimeout(function(){
      wx.stopPullDownRefresh();
      var badge = {
        DFK: parseInt(Math.random() * 10),
        DFH: parseInt(Math.random() * 10),
        YFH: parseInt(Math.random() * 10)
      };
      vm.setData({
        badgeCount: badge
      })
    },1000)
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})