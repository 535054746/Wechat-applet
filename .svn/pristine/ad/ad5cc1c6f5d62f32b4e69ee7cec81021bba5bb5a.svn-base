/**app.wxss**/
page{
  height: 100%;
  background: #F2F2F2;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
html{
  margin: 0;
  padding: 0
}
.contatin{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100%;
  box-sizing: border-box
}

.display-flex{
  display: flex;
  display: -webkit-flex;
}

.flex-row{
  flex: 1;
  -webkit-box-flex: 1;
}

.shopRight {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.typeshop{
  height: 88px;
  border-bottom: 1px solid #ddd;
  position: relative
}
.img{
  margin: 13px;
  width: 55px;
  height: 55px;
}
.itemName{
  position: absolute;
  top: 18px;
  font-size: 16px;
}
.specif{ 
  position: absolute;
  top: 40px;
  font-size: 14px;
  color: gray
}
.price{
  color: #ff4a94;
  position: absolute;
  top: 17px;
  right: 15px;
  white-space:nowrap;
  font-size: 16px
}
.add{
  width: 20px;
  height: 20px;
}
.sub{
  position: absolute;
  top: 1px;
  width: 18px;
  height: 18px;
  z-index: 9;
}
.carnum{
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 10px;
  bottom: 1px
}
.weui-input{
  width: 70px;
  text-align: center;
  font-size: 14px;
  /* position: absolute; */
  padding-left: 10px
}
.unit{
  position: absolute;
  top: 1px;
  font-size: 14px;
  right: 25px;
  color: gray
}

.common-bottom-btn{
  margin: 10px;
  background: #33b0ff;
  color: white;
  font-size: 16px;
  font-weight: normal;
  height: 40px;
  text-align: center;
  line-height: 40px;
  border-radius: 5px;
}

.bottom-block{
  position: fixed;
  bottom: 0;
  width: 100%;

}
.flex-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.flex{
 display: flex
}
.txtcolor{
  color: #969696;
  font-size: 14px;
}
.txtTheme {
  color:  #38a3ff;
}
.txtcolorMax{
  font-size: 16px;
  font-weight: bold;
}