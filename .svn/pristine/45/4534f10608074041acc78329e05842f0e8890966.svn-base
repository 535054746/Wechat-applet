
.order_headr{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height:40px;
  background: white;
  line-height: 40px;
  position: fixed;
  top: 0;
  z-index: 99;
}
.order_headr view:first-child {
  margin-left: 10px
}
.order_headr view:last-child{
  margin-right: 10px
}
.select {
  border-bottom: 2px solid #33b0ff;
}
.no_order{
  display: flex;
  justify-content: center;
  margin-top: 25%;
  color: #999;
  flex-direction: column;
  align-items: center;
}
.no_order image{
  width: 200rpx;
  height: 260rpx;
  display: block;
}
.order{
  width: 95%;
  height: 195px;
  background: white;
  margin: 10px auto 0;
  border-radius: 5px;
  position: relative;
  box-sizing: border-box;
}
.order_listheader{
  display: flex;
  justify-content: space-between;
  padding: 10px;
  border-bottom: 1px solid #F2F2F2;
  color: #969696
}
.order_listheader :nth-child(2) {
  color: #33b0ff;
  font-size: 15px;
  font-weight: 600
}
.order_listaddress {
  padding: 20px 0 20px 10px;
  border: 1px solid #F2F2F2;
  font-size: 16px;
  box-sizing: border-box;
}
.order_listaddress text{
  color: #969696;
  font-size: 16px
}
.order_price{
  position: absolute;
  right: 10px;
  top: 80px
}
.order_priceNum{
  font-size: 14px
}
.order_priceMon {
  font-size: 18px;
  font-weight: bold
}
.order_btn{
  color: white;
  font-size: 14px;
  border: 1px solid #d4d4d4;
  border-radius: 5px;
  width: 65px;
  background: #33b0ff;
  padding: 6px;
  float: right;
  margin: 5px 10px 5px 0;
  text-align: center;
}
.order_info{ 
  display: flex;
  padding: 1px;
  font-size: 14px;
}
.order_info text {
  display: block;
  width: 76px;
  font-size: 14px;
}
