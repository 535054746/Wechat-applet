
.order_headr{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height:40px;
  background: white;
  line-height: 40px
}
.order_headr view:first-child {
  margin-left: 10px
}
.order_headr view:last-child{
  margin-right: 10px
}
.select {
  border-bottom: 2px solid #ff4a94;
}
.no_order{
  display: flex;
  justify-content: center;
  margin-top: 25%;
  color: #999;
  flex-direction: column;
  align-items: center;
}
.no_order image{
  width: 200rpx;
  height: 260rpx;
  display: block;
}
.order{
  width: 95%;
  height: 170px;
  background: white;
  margin: 10px auto;
  border-radius: 5px;
  position: relative
}
.order_listheader{
  display: flex;
  justify-content: space-between;
  padding: 10px;
  border-bottom: 1px solid #F2F2F2;
  color: #d4d4d4
}
.order_listheader :nth-child(2) {
  color: #ff4a94;
  font-size: 15px;
  font-weight: 600
}
.order_listaddress {
  padding: 20px 0 30px 10px;
  border: 1px solid #F2F2F2;
  font-size: 16px;
}
.order_listaddress text{
  color: #d4d4d4;
  font-size: 16px
}
.order_price{
  position: absolute;
  right: 10px;
  top: 87px
}
.order_priceNum{
  font-size: 14px
}
.order_priceMon {
  font-size: 18px;
  font-weight: 500
}
.order_btn{
  color: white;
  font-size: 14px;
  border: 1px solid #d4d4d4;
  border-radius: 5px;
  position: absolute;
  right: 10px;
  bottom: 10px;
  background: #ff4a94;
  padding: 6px;
}