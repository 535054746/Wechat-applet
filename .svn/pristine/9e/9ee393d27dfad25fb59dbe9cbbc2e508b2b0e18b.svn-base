page{
  padding: 0;
  margin: 0;
  background: #f4f4f4;
  height: 100%;
  width: 100%;
}
.Consignee,.phone, .address, .House{
  background: white;
  height: 30px;
  padding: 10px;
  display: flex;
  flex-direction: row;
  align-content: center;
  color: #817777;
  margin: 5px auto;
}
.Consignee text,.phone text,.address text, .House text{
  align-self: center;
  font-size: 14px;
  margin-right: 15px
}
.Consignee input,.phone input ,.House input{
  align-self: center;
  font-size: 14px;
  color: black;
}
.section {
  font-size: 14px;
  align-self: center;
}

.radio{
  margin: 5px;
  font-size: 15px;
}
.address_footerbtn{
  height: 50px;
  background: white;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  align-content: center;
  justify-content: center;
}
.address_footerbtn view{
  height: 40px;
  background: #38a3ff;
  width: 95%;
  line-height: 30px;
  text-align: center;
  align-self: center;
  border-radius: 5px;
  color: white
}